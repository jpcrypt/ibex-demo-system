name: "openhbmc:hyperram:controller"
description: "OpenHBMC HyperRAM Controller Module"

filesets:
  files_src:
    depend:
      - lowrisc:prim:fifo
    files:
      - vendor/ovgn/OpenHBMC/hdl/OpenHBMC.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_ufifo.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_iobuf.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_elastic_buf.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_dru.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_dfifo.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_ctrl.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_clk_obuf.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_bus_sync.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_bit_sync.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_axi_top.v
      - vendor/ovgn/OpenHBMC/hdl/hbmc_arst_sync.v
    file_type: systemVerilogSource

  files_verilator:
    depend:
      # common waivers
      - lowrisc:lint:common

targets:
  default:
    filesets:
      - files_src
      - tool_verilator ? (files_verilator)
